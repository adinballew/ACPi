{{!< default}}
<div class="row">
    <div class="col-sm-3">
        {{! Temp and Humidity }}
        <h1 class="text-center">Temperature: <span id="envTemp">0</span>Â°F</h1>
        <p class="text-center">Humidity: <span id="envHum">0</span>%</p>

        {{! Radio AC Settings }}
        <div class="funkyradio">
            <div class="funkyradio-primary">
                <input type="radio" name="radio" id="radio1"/>
                <label for="radio1">Cool</label>
            </div>
            <div class="funkyradio-primary">
                <input type="radio" name="radio" id="radio2"/>
                <label for="radio2">Heat</label>
            </div>
            <div class="funkyradio-primary">
                <input type="radio" name="radio" id="radio3"/>
                <label for="radio3">Off</label>
            </div>
        </div>

        {{! Desired Temperature Slider }}
        <h3>Desired Temperature: <span id="desired-temp"></span></h3>
        <div class="slidecontainer">
            <label for="myRange"></label><input type="range" min="1" max="100" class="slider"
                                                id="myRange">
        </div>

        <br><br>

        {{! Current State of AC }}
        <p class="text-center" style="text-transform: capitalize">Setting: <span id="acSetting"></span></p>
        <p class="text-center">Desired Temp: <span id="acDesiredTemp"></span></p>
        <p class="text-center" style="text-transform: capitalize">Running: <span id="acRunning"></span></p>
        <p class="text-center">Count Down: <span id="acCountdown"></span></p>
    </div>

    <div class="col-sm-9">
        {{! The Chart }}
        <div class="chart-container" style="position: fixed; width:60vw; margin: auto;">
            <canvas id="myChart"></canvas>
        </div>
    </div>

</div>
<script src="/javascripts/chart.js/Chart.min.js"></script>
<script src="/javascripts/socket.io/socket.io.js"></script>
<script src="/javascripts/main.js"></script>
